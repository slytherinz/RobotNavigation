<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="defaultExecutorType" value="BATCH"/>
    </settings>

       <!--使用对包扫描的方式取代<typeAlias>标签的配置-->
    <typeAliases>
        <package name="com.ssm.entity"></package>
    </typeAliases>

    <!--扫描Mapper配置文件-->
    <mappers>
        <mapper resource="mapper/NavPointMapper.xml"/>
        <mapper resource="mapper/NavMapMapper.xml"/>
        <mapper resource="mapper/NavRoutineMapper.xml"/>
    </mappers>

</configuration>